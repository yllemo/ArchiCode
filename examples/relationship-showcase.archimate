#spacing: 70
#fontSize: 13

// Demonstration of all ArchiMate relationship types

// Elements for testing relationships
[<business:actor> Source Actor]
[<business:actor> Target Actor]
[<business:role> Manager Role]
[<business:role> Employee Role]
[<business:process> Process A]
[<business:process> Process B]
[<business:service> Service A]
[<business:service> Service B]
[<application:component> Component A]
[<application:component> Component B]
[<application:data> Data Store]
[<technology:node> Server]

// Association - simple relationship (solid line, no arrow)
[Source Actor] --- [Target Actor]

// Serving - one serves another (solid line, open arrow)
[Service A] -> [Process A]
[Component A] -> [Service A]

// Flow - information/data flow (dashed line, open arrow)
[Process A] --> [Process B]

// Realization - realizes/implements (dashed line, empty triangle)
[Component A] --:> [Service B]

// Triggering - triggers/activates (solid line, open arrow)
[Process B] -|> [Process A]

// Assignment - assigned to (solid line, filled circle)
[Manager Role] .-- [Source Actor]
[Employee Role] .-- [Target Actor]

// Composition - is part of (solid line, filled diamond)
[Server] +- [Component B]

// Aggregation - is part of (solid line, empty diamond)
[Service A] o- [Component A]

// Specialization - is a specialized form of (solid line, empty triangle)
[Manager Role] -:> [Employee Role]

// Access - accesses (dashed line, bidirectional open arrows)
[Component B] <-> [Data Store]